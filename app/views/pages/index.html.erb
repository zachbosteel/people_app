<div ng-app="app">
  <div ng-controller="people-ctrl">
    <h1>Interesting People</h1>
    <ul>
      <li ng-repeat="person in people" ng-click="toggleBio(person)">{{person.name}}<p ng-if="isShown(person)">{{person.bio}}</p><p ng-click="deletePerson(person)">Delete Entry</p></li>
    </ul>
    <h1>New Person</h1>
    Name: <input ng-model="newPersonName">
    Bio: <input ng-model="newPersonBio">
    <button ng-click="addPerson(newPersonName, newPersonBio)">Add Person</button>

    <h4 ng-model="count">{{ count }}</h4>

  </div>
</div>